# FixPoint Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control

# ==========================================
# AI API Keys
# ==========================================
# Get your Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Get your OpenAI API key from: https://platform.openai.com/api-keys (optional)
OPENAI_API_KEY=your_openai_api_key_here

# AI Provider: gemini, openai, or fallback
AI_PROVIDER=gemini

# ==========================================
# Email Configuration
# ==========================================
# Gmail SMTP Configuration
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here

# ==========================================
# Security Configuration
# ==========================================
# JWT Secret (must be at least 32 characters)
JWT_SECRET=your_very_secure_jwt_secret_key_here_minimum_32_characters

# JWT Expiration in milliseconds (86400000 = 24 hours)
JWT_EXPIRATION=86400000

# ==========================================
# Server Configuration
# ==========================================
# Port for local development
PORT=8080

# ==========================================
# CORS Configuration
# ==========================================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://itsamisha.github.io

# ==========================================
# Google Cloud Configuration (Optional)
# ==========================================
# Vertex AI Project ID (if using Google Vertex AI)
VERTEX_PROJECT_ID=your_vertex_project_id_here
VERTEX_LOCATION=us-central1

# Google Cloud Project ID for Speech-to-Text
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id

# ==========================================
# Application Settings
# ==========================================
# Application name
APP_NAME=FixPoint

# Email sender
EMAIL_FROM=FixPoint <noreply@fixpoint.com>

# OTP Configuration
OTP_EXPIRY_MINUTES=10
OTP_MAX_ATTEMPTS=3